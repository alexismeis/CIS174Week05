@model List<Contact>
@{
    ViewBag.Title = "My Contacts";
}

<h1>Contacts</h1>

<!--Inline syntax-->
@{
    string message = "Welcome!";
}

<h2>@message</h2>

<a asp-controller="Contact" asp-action="Add">Add New Contact</a>
<table class="table table-bordered table striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Note</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!--Block syntax-->
        @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.PhoneNum</td>
                    <td>@contact.Address</td>
                    <td>@contact.Note</td>
                    <td>
                        <a asp-controller="Contact" asp-action="Edit"
                           asp-route-id="@contact.ContactId"
                           asp-route-slug="@contact.Slug"
                           class="btn btn-primary">Edit</a>
                        <a asp-controller="Contact" asp-action="Delete"
                           asp-route-id="@contact.ContactId"
                           asp-route-slug="@contact.Slug"
                           class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>